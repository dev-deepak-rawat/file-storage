<%= form_for document do |form| %>
  <%= form.label :title %>
  <%= form.text_field :title, required: true %>
  <br />
  <br />
  <%= form.label :description %>
  <%= form.text_field :description, required: true %>
  <br />
  <br />
  <%= form.file_field :file, required: true %>
  <br />
  <br />
  <%= form.submit "Upload document", class: "create-button" %>
<% end %>
